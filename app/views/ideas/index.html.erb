<h1 class='text-center well'>Idea Box</h1>


<div id='new-idea-form' class='form-group text-center well'>
  <h4>Submit a New Idea:</h4>
  <form id="create-idea">
    <div class="field">
      <label for="title">Title:</label>
      <input type="text" id="idea-title" name="idea[title]" required>
    </div>

    <div class="field">
      <label for="body">Body:</label>
      <textarea id="idea-body" name="idea[body]" required></textarea>
    </div>

    <div class="field">
      <button type="submit" id="save-new-idea">Save</button>
    </div>
  </form>
</div>

<br>

<div id='search-ideas' class='form-group text-center well'>
  <form class="ui-filterable">
    <label>Search Ideas:</label>
    <input id="ideaFilter" data-type="search">
  </form>
</div>

<div id="results">
  <table data-filter="true" data-input="#ideaFilter" class='table table-striped table-bordered table-condensed'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Quality</th>
        <th>Like</th>
        <th>Dislike</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody id='ideas-table'>
    </tbody>
  </table>
</div>
